{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
